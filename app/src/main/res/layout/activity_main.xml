<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/logoSuperior"
        tools:layout_editor_absoluteX="93dp"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="407dp"
        android:layout_height="55dp"
        android:drawableLeft="@drawable/ic_baseline_person_outline_24"
        android:text="UserName"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="2dp"
        tools:layout_editor_absoluteY="250dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="413dp"
        android:layout_height="49dp"
        android:drawableLeft="@drawable/ic_baseline_lock_24"
        android:text="Password"
        android:ems="10"
        android:textColor="@color/black"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-4dp"
        tools:layout_editor_absoluteY="324dp" />

    <Button
        android:layout_width="187dp"
        android:layout_height="48dp"
        tools:layout_editor_absoluteX="141dp"
        tools:layout_editor_absoluteY="424dp"
        android:textColor="@color/black"
        android:text="LOGIN"
        android:background="@color/material_dynamic_neutral_variant10"
        android:textStyle="bold"
        android:textSize="24dp"

        />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="199dp"
        android:layout_height="34dp"
        android:text="Forget Password"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="210dp"
        tools:layout_editor_absoluteY="373dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="288dp"
        android:layout_height="46dp"
        android:text="Not using superior"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="490dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="411dp"
        android:layout_height="46dp"
        android:background="#E34949"
        android:text="REGISTER NOW"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24dp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="546dp" />

    <ImageView
        android:layout_width="407dp"
        android:layout_height="84dp"
        app:srcCompat="@drawable/all"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="647dp" />

    <ScrollView
        android:layout_width="440dp"
        android:layout_height="761dp"
        tools:layout_editor_absoluteX="-29dp"
        tools:layout_editor_absoluteY="-32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>